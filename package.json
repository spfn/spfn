{
  "name": "spfn",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "sync:guides": "node scripts/sync-guides.js",
    "test:init": "node scripts/test-init.mjs",
    "publish:packages": "pnpm build --filter=\"!./apps/*\" && pnpm --filter \"./packages/*\" publish --tag alpha --access public",
    "publish:alpha": "pnpm publish:packages",
    "version:bump": "pnpm --filter \"./packages/*\" version"
  },
  "devDependencies": {
    "chalk": "^5.3.0",
    "dotenv-cli": "^10.0.0",
    "execa": "^9.5.2",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.1",
    "prettier": "^3.2.5",
    "turbo": "^2.5.8",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.1.2",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.34.41",
    "drizzle-typebox": "^0.3.3"
  }
}