{
  "name": "@spfn/auth",
  "version": "0.1.0-alpha.1",
  "description": "Client-key based authentication system for SPFN Framework",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "spfn",
    "authentication",
    "client-key",
    "asymmetric-cryptography",
    "typescript",
    "ecdsa",
    "p-256",
    "security",
    "aes-256-gcm",
    "replay-attack-prevention",
    "nonce",
    "caching"
  ],
  "author": "Ray Im <rayim@inflike.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spfn/spfn.git",
    "directory": "packages/auth"
  },
  "bugs": {
    "url": "https://github.com/spfn/spfn/issues"
  },
  "homepage": "https://github.com/spfn/spfn/tree/main/packages/auth#readme",
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@spfn/core": "workspace:*",
    "@spfn/user": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.0",
    "ioredis": "^5.4.1",
    "next": "^15.5.4",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  }
}