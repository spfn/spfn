{
  "name": "@spfn/core",
  "version": "0.1.0-alpha.11",
  "description": "SPFN Framework Core - File-based routing, transactions, repository pattern",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js",
      "require": "./dist/client/index.js"
    },
    "./route": {
      "types": "./dist/route/index.d.ts",
      "import": "./dist/route/index.js",
      "require": "./dist/route/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js",
      "require": "./dist/db/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.js"
    },
    "./scripts": {
      "types": "./dist/scripts/index.d.ts",
      "import": "./dist/scripts/index.js",
      "require": "./dist/scripts/index.js"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.ts",
      "import": "./dist/codegen/index.js",
      "require": "./dist/codegen/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:codegen": "vitest run --config vitest.codegen.config.ts",
    "test:db": "dotenv -e .env.test -- vitest src/tests/db",
    "docker:test:up": "docker compose -f ../../docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f ../../docker-compose.test.yml down",
    "docker:test:logs": "docker compose -f ../../docker-compose.test.yml logs -f",
    "type-check": "tsc --noEmit",
    "generate:client": "node dist/scripts/generate-client.js",
    "generate:client:watch": "node dist/scripts/generate-client.js --watch"
  },
  "keywords": [
    "spfn",
    "nextjs",
    "backend",
    "framework",
    "typescript",
    "type-safe",
    "api",
    "rest-api",
    "crud",
    "database",
    "orm",
    "drizzle-orm",
    "postgres",
    "redis",
    "hono",
    "fullstack",
    "server",
    "scalable",
    "auto-generated",
    "file-based-routing",
    "transaction",
    "repository-pattern"
  ],
  "author": "Ray Im <rayim@inflike.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spfn/spfn.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/spfn/spfn/issues"
  },
  "homepage": "https://github.com/spfn/spfn/tree/main/packages/core#readme",
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "@sinclair/typebox": "^0.34.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "drizzle-typebox": "^0.1.0",
    "hono": "^4.9.0",
    "pino": "^10.0.0",
    "postgres": "^3.4.0",
    "typescript": "^5.3.3",
    "zod": "^4.1.11"
  },
  "optionalDependencies": {
    "ioredis": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "alpha"
  }
}
