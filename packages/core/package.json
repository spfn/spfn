{
  "name": "@spfn/core",
  "version": "0.1.0",
  "description": "SPFN Framework Core - File-based routing, transactions, repository pattern",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./route": {
      "types": "./dist/route/index.d.ts",
      "import": "./dist/route/index.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    },
    "./scripts": {
      "types": "./dist/scripts/index.d.ts",
      "import": "./dist/scripts/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:db": "dotenv -e .env.test -- vitest src/tests/db",
    "docker:test:up": "docker compose -f ../../docker-compose.test.yml up -d",
    "docker:test:down": "docker compose -f ../../docker-compose.test.yml down",
    "docker:test:logs": "docker compose -f ../../docker-compose.test.yml logs -f",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "spfn",
    "framework",
    "nextjs",
    "hono",
    "typescript",
    "fullstack",
    "backend",
    "file-based-routing",
    "transaction",
    "repository-pattern",
    "drizzle-orm",
    "postgres",
    "redis"
  ],
  "author": "INFLIKE Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spfn/spfn.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/spfn/spfn/issues"
  },
  "homepage": "https://github.com/spfn/spfn/tree/main/packages/core#readme",
  "engines": {
    "node": ">=18.18.0"
  },
  "peerDependencies": {
    "@hono/node-server": "^1.0.0",
    "drizzle-orm": "^0.44.0",
    "hono": "^4.9.0",
    "postgres": "^3.4.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.3",
    "pino": "^10.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "ioredis": "^5.4.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ]
}
